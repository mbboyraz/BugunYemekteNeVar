<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.milliyet.hulya.yemekhane">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.milliyet.hulya.yemekhane.controller.AppController"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.milliyet.hulya.yemekhane.ui.RecyclerViewActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="com.milliyet.hulya.yemekhane.ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.milliyet.hulya.yemekhane.ui.AboutUsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>