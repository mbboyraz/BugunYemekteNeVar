<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f40521</item>
        <item name="colorPrimaryDark">#ae1515</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="splash_screen_style">
        <item name="android:background">@color/splash_screen</item>
    </style>

</resources>


