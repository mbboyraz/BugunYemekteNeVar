<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/foodType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/colorbaslik"
        android:textSize="40sp"
        android:textStyle="bold" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/placeholder_rev">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/network_image_food1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtfood1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/network_image_food1"
                android:layout_alignEnd="@+id/network_image_food1"
                android:layout_alignStart="@+id/network_image_food1"
                android:layout_alignTop="@+id/network_image_food1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_transparent"
                android:gravity="center"
                android:textColor="@color/colortext"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/placeholder_rev">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/network_image_food2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtfood2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/network_image_food2"
                android:layout_alignEnd="@+id/network_image_food2"
                android:layout_alignStart="@+id/network_image_food2"
                android:layout_alignTop="@+id/network_image_food2"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_transparent"
                android:gravity="center"
                android:textColor="@color/colortext"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/placeholder_rev">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/network_image_food3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtfood3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/network_image_food3"
                android:layout_alignEnd="@+id/network_image_food3"
                android:layout_alignStart="@+id/network_image_food3"
                android:layout_alignTop="@+id/network_image_food3"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_transparent"
                android:gravity="center"
                android:textColor="@color/colortext"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
